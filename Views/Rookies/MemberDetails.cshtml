@model mvc.Models.Person
@{
    ViewData["Title"] = "Member Details";
}

<h2>Member Details</h2>

<table border="1">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Gender</th>
            <th>Date of Birth</th>
            <th>Phone Number</th>
            <th>Birth Place</th>
            <th>Graduated</th>
        </tr>
    </thead>
    <tbody>
        <tr>  
            <td>@Model.FirstName @Model.LastName</td>
            <td>@Model.Gender</td>
            <td>@Model.DateOfBirth.ToString("yyyy-MM-dd")</td>
            <td>@Model.PhoneNumber</td>
            <td>@Model.BirthPlace</td>
            <td>@(Model.IsGraduated ? "Yes" : "No")</td>
        </tr>
    </tbody>
</table>

<br />

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;">
    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this member?');">
        Delete
    </button>
</form>


<a asp-action="Members" class="btn btn-secondary">Back to List</a>